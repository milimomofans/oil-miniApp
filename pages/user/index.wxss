page {
  background: #f5f5f5;
}
.user_head {
  width: 100vw;
  height: 224rpx;
  background: linear-gradient(135deg, #f5bf47 0%, #f0aa3b 100%);
}
.user_info {
  display: flex;
  flex-direction: row;
  padding: 40rpx 20rpx 0 40rpx;
  box-sizing: border-box;
}
.user_info .user_info_left {
  margin-right: 20rpx;
}
.user_info .user_info_left image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.user_info .user_info_right .user_info_name {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #222222;
}
.user_info .user_info_right .user_info_item {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.user_info .user_info_right .user_info_item .item_image {
  width: 32rpx;
  height: 32rpx;
}
.user_info .user_info_right .user_info_item text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #222222;
}
.editor {
  width: 120rpx;
  height: 60rpx;
  background: #e26c3f;
  border-radius: 8rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #ffffff;
  margin-left: auto;
  margin-top: 35rpx;
}
.user_func_item {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-left: 40rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}
.user_func_item view {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #222222;
}
.user_func_item image {
  width: 32rpx;
  height: 32rpx;
}
.user_func {
  border-top: 2rpx solid #f5f5f5;
  border-bottom: 2rpx solid #f5f5f5;
  background: white;
  margin-top: 40rpx;
}
